<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.reactlibrary.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- scan_frame transparente, solo para posicionar la línea -->
    <FrameLayout
        android:id="@+id/scan_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center">
        <View
            android:id="@+id/laser"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/laser_gradient" />
    </FrameLayout>

    <!-- resto idéntico -->
    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="120dp"
        android:text="Enfoca el código PDF417 dentro del marco" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="240dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:max="100" />

    <ImageButton
        android:id="@+id/flash_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="36dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_flash_on"
        android:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_margin="18dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close"
        android:tint="#FFFFFF" />
</FrameLayout>
